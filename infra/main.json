{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.40.2.10011",
      "templateHash": "18241849153875151589"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "postgresLocation": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Location for PostgreSQL. Defaults to eastus due to availability restrictions in some regions."
      }
    },
    "applicationName": {
      "type": "string",
      "defaultValue": "pacman-app"
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev"
    },
    "postgresAdminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "acrName": "[format('acr{0}', variables('uniqueSuffix'))]",
    "appServicePlanName": "[format('asp-{0}-{1}', parameters('applicationName'), parameters('environment'))]",
    "webAppName": "[format('app-{0}-{1}', parameters('applicationName'), parameters('environment'))]",
    "dockerImageName": "pacman",
    "dockerImageTag": "latest",
    "postgresServerName": "[format('psql-{0}', uniqueString(resourceGroup().id, parameters('postgresLocation')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "acrDeploy",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "acrName": {
            "value": "[variables('acrName')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.40.2.10011",
              "templateHash": "14254222327462833548"
            }
          },
          "parameters": {
            "location": {
              "type": "string"
            },
            "acrName": {
              "type": "string"
            },
            "sku": {
              "type": "string",
              "defaultValue": "Basic"
            }
          },
          "resources": [
            {
              "type": "Microsoft.ContainerRegistry/registries",
              "apiVersion": "2023-01-01-preview",
              "name": "[parameters('acrName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "[parameters('sku')]"
              },
              "properties": {
                "adminUserEnabled": true
              }
            }
          ],
          "outputs": {
            "loginServer": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').loginServer]"
            },
            "acrName": {
              "type": "string",
              "value": "[parameters('acrName')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "postgresDeploy",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('postgresLocation')]"
          },
          "serverName": {
            "value": "[variables('postgresServerName')]"
          },
          "adminPassword": {
            "value": "[parameters('postgresAdminPassword')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.40.2.10011",
              "templateHash": "1279987268035452834"
            }
          },
          "parameters": {
            "location": {
              "type": "string"
            },
            "serverName": {
              "type": "string"
            },
            "adminPassword": {
              "type": "securestring"
            },
            "adminUsername": {
              "type": "string",
              "defaultValue": "postgresAdmin"
            },
            "databaseName": {
              "type": "string",
              "defaultValue": "pacmangame"
            }
          },
          "resources": [
            {
              "type": "Microsoft.DBforPostgreSQL/flexibleServers",
              "apiVersion": "2022-12-01",
              "name": "[parameters('serverName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "Standard_B1ms",
                "tier": "Burstable"
              },
              "properties": {
                "administratorLogin": "[parameters('adminUsername')]",
                "administratorLoginPassword": "[parameters('adminPassword')]",
                "version": "13",
                "storage": {
                  "storageSizeGB": 32
                }
              }
            },
            {
              "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
              "apiVersion": "2022-12-01",
              "name": "[format('{0}/{1}', parameters('serverName'), parameters('databaseName'))]",
              "dependsOn": [
                "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('serverName'))]"
              ]
            },
            {
              "type": "Microsoft.DBforPostgreSQL/flexibleServers/firewallRules",
              "apiVersion": "2022-12-01",
              "name": "[format('{0}/{1}', parameters('serverName'), 'AllowAllAzureServicesAndResourcesWithinAzureIps')]",
              "properties": {
                "startIpAddress": "0.0.0.0",
                "endIpAddress": "0.0.0.0"
              },
              "dependsOn": [
                "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('serverName'))]"
              ]
            }
          ],
          "outputs": {
            "fqdn": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('serverName')), '2022-12-01').fullyQualifiedDomainName]"
            },
            "databaseName": {
              "type": "string",
              "value": "[parameters('databaseName')]"
            },
            "adminUsername": {
              "type": "string",
              "value": "[parameters('adminUsername')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "webAppDeploy",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "appName": {
            "value": "[variables('webAppName')]"
          },
          "appServicePlanName": {
            "value": "[variables('appServicePlanName')]"
          },
          "acrLoginServer": {
            "value": "[reference(resourceId('Microsoft.Resources/deployments', 'acrDeploy'), '2025-04-01').outputs.loginServer.value]"
          },
          "acrName": {
            "value": "[reference(resourceId('Microsoft.Resources/deployments', 'acrDeploy'), '2025-04-01').outputs.acrName.value]"
          },
          "dockerImageName": {
            "value": "[variables('dockerImageName')]"
          },
          "dockerImageTag": {
            "value": "[variables('dockerImageTag')]"
          },
          "dbHost": {
            "value": "[reference(resourceId('Microsoft.Resources/deployments', 'postgresDeploy'), '2025-04-01').outputs.fqdn.value]"
          },
          "dbUser": {
            "value": "[reference(resourceId('Microsoft.Resources/deployments', 'postgresDeploy'), '2025-04-01').outputs.adminUsername.value]"
          },
          "dbPass": {
            "value": "[parameters('postgresAdminPassword')]"
          },
          "dbName": {
            "value": "[reference(resourceId('Microsoft.Resources/deployments', 'postgresDeploy'), '2025-04-01').outputs.databaseName.value]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.40.2.10011",
              "templateHash": "17759325718955946789"
            }
          },
          "parameters": {
            "location": {
              "type": "string"
            },
            "appName": {
              "type": "string"
            },
            "appServicePlanName": {
              "type": "string"
            },
            "acrLoginServer": {
              "type": "string"
            },
            "acrName": {
              "type": "string"
            },
            "dockerImageName": {
              "type": "string"
            },
            "dockerImageTag": {
              "type": "string",
              "defaultValue": "latest"
            },
            "dbHost": {
              "type": "string"
            },
            "dbUser": {
              "type": "string"
            },
            "dbPass": {
              "type": "securestring"
            },
            "dbName": {
              "type": "string"
            }
          },
          "resources": [
            {
              "type": "Microsoft.Web/serverfarms",
              "apiVersion": "2022-09-01",
              "name": "[parameters('appServicePlanName')]",
              "location": "[parameters('location')]",
              "properties": {
                "reserved": true
              },
              "sku": {
                "name": "B1",
                "tier": "Basic"
              },
              "kind": "linux"
            },
            {
              "type": "Microsoft.Web/sites",
              "apiVersion": "2022-09-01",
              "name": "[parameters('appName')]",
              "location": "[parameters('location')]",
              "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                "siteConfig": {
                  "linuxFxVersion": "[format('DOCKER|{0}/{1}:{2}', parameters('acrLoginServer'), parameters('dockerImageName'), parameters('dockerImageTag'))]",
                  "appSettings": [
                    {
                      "name": "DOCKER_REGISTRY_SERVER_URL",
                      "value": "[format('https://{0}', parameters('acrLoginServer'))]"
                    },
                    {
                      "name": "DOCKER_REGISTRY_SERVER_USERNAME",
                      "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').username]"
                    },
                    {
                      "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
                      "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').passwords[0].value]"
                    },
                    {
                      "name": "WEBSITES_PORT",
                      "value": "6060"
                    },
                    {
                      "name": "DB_HOST",
                      "value": "[parameters('dbHost')]"
                    },
                    {
                      "name": "DB_USER",
                      "value": "[parameters('dbUser')]"
                    },
                    {
                      "name": "DB_PASSWORD",
                      "value": "[parameters('dbPass')]"
                    },
                    {
                      "name": "DB_NAME",
                      "value": "[parameters('dbName')]"
                    },
                    {
                      "name": "DB_PORT",
                      "value": "5432"
                    },
                    {
                      "name": "DB_SSLMODE",
                      "value": "require"
                    }
                  ]
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
              ]
            }
          ],
          "outputs": {
            "appServiceUrl": {
              "type": "string",
              "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/sites', parameters('appName')), '2022-09-01').defaultHostName)]"
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'acrDeploy')]",
        "[resourceId('Microsoft.Resources/deployments', 'postgresDeploy')]"
      ]
    }
  ],
  "outputs": {
    "acrLoginServer": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'acrDeploy'), '2025-04-01').outputs.loginServer.value]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'webAppDeploy'), '2025-04-01').outputs.appServiceUrl.value]"
    }
  }
}